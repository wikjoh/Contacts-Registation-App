<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:viewmodels="clr-namespace:Presentation.Maui.ViewModels"
             x:DataType="{x:Type viewmodels:EditContactViewModel}"
             
             x:Class="Presentation.Maui.Views.EditContactView">

    <VerticalStackLayout>
        <Label Text="First Name" Margin="0, 0, 0, 5" />
        <Entry Text="{Binding ContactEdit.FirstName}" />

        <Label Text="Last Name" Margin="0, 20, 0, 5" />
        <Entry Text="{Binding ContactEdit.LastName}" />

        <Label Text="Email" Margin="0, 20, 0, 5" />
        <Entry Text="{Binding ContactEdit.Email}" />

        <Label Text="Phonenumber" Margin="0, 20, 0, 5" />
        <Entry Text="{Binding ContactEdit.PhoneNumber}" />

        <Label Text="Street Address" Margin="0, 20, 0, 5" />
        <Entry Text="{Binding ContactEdit.StreetAddress}" />

        <Label Text="Postal Code" Margin="0, 20, 0, 5" />
        <Entry Text="{Binding ContactEdit.PostalCode}" />

        <Label Text="City" Margin="0, 20, 0, 5" />
        <Entry Text="{Binding ContactEdit.City}" />

        <Button Command="{Binding UpdateContactCommand}" Text="Update Contact" Margin="0,40,0,20" Padding="0,10" />
    </VerticalStackLayout>


</ContentPage>